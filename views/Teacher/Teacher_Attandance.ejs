<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Social Media</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/profile.css">
    <link rel="stylesheet" href="/subjects.css">
    <link rel="stylesheet" href="/Attandance.css">

</head>

<body>
    <%- include('../partials/Teacher_sidebar', { currentPage: 'Class' }) %>

        <div class="main-content">
            <% if (success_msg) { %>
                <div class="alert alert-success">
                  <%= success_msg %>
                </div>
              <% } %>
              
              <% if (error_msg) { %>
                <div class="alert alert-danger">
                  <%= error_msg %>
                </div>
              <% } %>
              
            <form method="POST" action="/mark-attendance">
            <h1><input type="text" name="className" value="<%=className%>" readonly></h1>
            <div class="table-container">
                <h2>Class - <%=className%></h2>
                
                   
                    <table>
                        <thead>
                            <tr>
                                <th>Roll Number</th>
                                <th>Student Name</th>
                                <th>Father Name</th>
                                <th>Subject ID</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% AllStudent.forEach((student,index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td> <!-- Roll Number -->
                                    <td>
                                        <input type='text' name='StudentName[<%= student._id %>]' value='<%= student.name %>' readonly>
                                    </td>
                                    <td>
                                        <%= student.fatherName %>
                                    </td>
                                    <td>
                                        <%= student.Registration_Id %>
                                    </td>

                                    <td>
                                        <select name="attendance[<%= student._id %>]">
                                            <option value="Absent">Absent</option>
                                            <option value="Present">Present</option>
                                        
                                        </select>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <button type="submit" <% if (alreadyMarked) { %> disabled <% } %> 
                        style="<% if (alreadyMarked) { %> background-color: #555; cursor: not-allowed; <% } %>">
                            <% if (alreadyMarked) { %> âœ… Attendance Already Marked <% } else { %> Submit Attendance <% } %>
                        </button>
                </form>
            </div>
        </div>


</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const selects = document.querySelectorAll('select[name^="attendance"]');

        selects.forEach((select) => {
            select.addEventListener('change', function () {
                select.classList.remove('absent', 'present', 'late', 'half-day');
                
                switch (select.value) {
                    case 'Absent':
                        select.classList.add('absent');
                        break;
                    case 'Present':
                        select.classList.add('present');
                        break;
                    default:
                        break;
                }
            });
        });
    });


    
</script>
</html>