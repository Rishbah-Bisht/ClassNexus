<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Social Media</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/admin.css">
</head>

<body>
    <%- include('../partials/Admin_sidebar', { currentPage: 'add-student' }) %>

  <div class="main-content">
    <div id="user-tab" class="tab-content active">
        <h2>Add New Student</h2>
        <form id="user-form" action="/Admin/Save-User-info" method="post" autocomplete="off">
            <div class="form-row">
                <div class="form-group">
                    <label for="user-Student_ID">Student ID</label>
                    <input type="text" id="user-Student_ID" name="Student_ID" required autocomplete="off">
                </div>
            </div>
    
            <div class="form-row">
                <div class="form-group">
                    <label for="user-name">Full Name</label>
                    <input type="text" id="user-name" name="name" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="user-Father_name">Father Name</label>
                    <input type="text" id="user-Father_name" name="Father_name" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="user-email">Email</label>
                    <input type="email" id="user-email" name="email" required autocomplete="off">
                </div>
            </div>
    
            <div class="form-row">
                <div class="form-group">
                    <label for="user-d_o_b">Date Of Birth</label>
                    <input type="text" id="user-d_o_b" name="d_o_b" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="user-class">Class</label>
                    <select id="user-class" name="class" required autocomplete="off">
                        <option value="" disabled selected>Select Class</option>
                        <option value="V">V</option>
                        <option value="VI">VI</option>
                        <option value="VII">VII</option>
                        <option value="VIII">VIII</option>
                        <option value="IX">IX</option>
                        <option value="X">X</option>
                        <option value="XI(M)">XI (Math)</option>
                        <option value="XI(B)">XI (Biology)</option>
                        <option value="XI(C)">XI (Commerce)</option>
                        <option value="XI(A)">XI (Arts)</option>
                        <option value="XII(M)">XII (Math)</option>
                        <option value="XII(B)">XII (Biology)</option>
                        <option value="XII(C)">XII (Commerce)</option>
                        <option value="XII(A)">XII (Arts)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="user-role">Role</label>
                    <select id="user-role" name="role" required autocomplete="off">
                        <option value="student" selected>Student</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="submit-btn"><i class="fa-solid fa-plus" style="color: #ffffff;"></i> Add Student</button>
            <div id="user-success" class="success-message">
                User added successfully!
            </div>
        </form>
    </div>
    

  </div>
  


  <!-- JavaScript -->
  <script src="post.js">

  </script>
</body>

</html>